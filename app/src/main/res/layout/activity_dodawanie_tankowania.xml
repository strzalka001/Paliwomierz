<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dodawanie_tankowania"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tlo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.milek.paliwomierz.DodawanieTankowania">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:id="@+id/editTextLitry"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal"
        android:hint="@string/dodaj_litry"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="36dp"
        android:id="@+id/editTextData"
        android:layout_below="@+id/editTextCena"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/dodaj_data"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/editTextCena"
        android:hint="@string/dodaj_cena"
        android:layout_below="@+id/editTextLitry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/button_dodaj"
        style="@style/styl_button"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDodaj"
        android:backgroundTint="@color/kolor_buttona"
        android:layout_below="@+id/editTextData"
        android:layout_alignRight="@+id/editTextData"
        android:layout_alignEnd="@+id/editTextData"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="@string/text_dodaj_tankowanie"
        android:textSize="@dimen/text_naglowek"
        style="@style/naglowki"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6" />
</RelativeLayout>
